{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "allowJs": false,
    "noEmit": true,
  },
  "files": ["./types.d.ts"],
  "include": ["packages/**/*", "draft-packages/**/*", "storybook/**/*"],
  "exclude": ["**/node_modules", "packages/components/**/*"],
}
